---
layout: none
---
[
  {% assign visible_posts = site.posts | where_exp: "post", "post.hidden != true" %}
  {% for post in visible_posts %}
    {% assign post_date_ts = post.date | date: "%s" | plus: 0 %}
    {% assign post_modified_ts = post.last_modified_at | default: post.date | date: "%s" | plus: 0 %}
    {
      "tags"     : "{{ post.tags | join: ', ' }}",
      "title"    : {{ post.title | jsonify | strip_html }},
      "excerpt"  : {{ post.excerpt | jsonify | strip_html }},
      "url"      : "{{ post.url }}",
      "date"     : "{{ post.date | date: "%b %-d, %Y" }}",
      "meta"     : "{{ post.date | date: "%b %-d, %Y" }}{% if post_modified_ts > post_date_ts %} [Updated: {{ post.last_modified_at | date: "%b %-d, %Y" }}]{% endif %}{% if post.tags and post.tags.size > 0 %} â€¢ {{ post.tags | join: ', ' }}{% endif %}",
      "content"  : {{ post.content | jsonify | strip_html }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]