  "background_color": "#e8ecf0",
  "theme_color": "#111111",
  "icons": [
    {
      "src": "{{ '/assets/images/favicon/android-chrome-192x192.png' | relative_url }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ '/assets/images/favicon/android-chrome-512x512.png' | relative_url }}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "{{ '/assets/images/pwa/pwa-screenshot-wide.jpg' | relative_url }}",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "form_factor": "wide"
    },
    {
      "src": "{{ '/assets/images/pwa/pwa-screenshot-mobile.jpg' | relative_url }}",
      "sizes": "720x1280",
      "type": "image/jpeg"
    }
  ]
